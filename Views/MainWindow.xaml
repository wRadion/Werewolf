<Window x:Class="Werewolf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Werewolf.Views"
        xmlns:converters="clr-namespace:Werewolf.Converters"
        mc:Ignorable="d"
        Title="Loup-garous de Thiercelieux"
        Icon="/Resources/Images/werewolf.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="720px" Height="540px">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="1" />
    </Window.Background>

    <Border x:Name="Main">
        <Border.Background>
            <SolidColorBrush Color="AntiqueWhite" Opacity="0" />
        </Border.Background>
    </Border>
</Window>
